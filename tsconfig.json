{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "./test",
    "./scripts",
    "./contracts",
    "./artifacts/**/*",
    "./typechain-types/**/*",
    "**/*.ts",
    "./decs.d.ts",
    "./utils"
  ],
  "files": ["hardhat.config.ts"]
}
